<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="0.25"
    android:layout_height="match_parent">
    <LinearLayout android:id="@+id/LinearLayout02" android:layout_weight="1" android:layout_height="0dp" android:layout_width="match_parent">
        <Button android:id="@+id/buttonDel" android:text="DEL" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:onClick="onDelClick"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayout01" android:layout_weight="1" android:layout_height="0dp" android:layout_width="match_parent">
        <Button android:id="@+id/buttonDiv" android:text="/" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:onClick="onDivideClick"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout03" android:layout_weight="1" android:layout_height="0dp" android:layout_width="match_parent">
        <Button android:id="@+id/buttonMul" android:text="*" android:layout_weight="1" android:layout_height="match_parent" android:layout_width="0dp" android:onClick="onMultipleClick"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout04" android:layout_weight="1" android:layout_height="0dp" android:layout_width="match_parent">
        <Button android:id="@+id/buttonMinus" android:text="-" android:layout_weight="1" android:layout_height="match_parent" android:layout_width="0dp" android:onClick="onMinusClick"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout05" android:layout_weight="1" android:layout_height="0dp" android:layout_width="match_parent">
        <Button android:id="@+id/buttonPlus" android:text="+" android:layout_weight="1" android:layout_height="match_parent" android:layout_width="0dp" android:onClick="onPlusClick"></Button>
    </LinearLayout>

</LinearLayout>